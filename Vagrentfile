Vagrant.configure("2") do |config|
  config.vm.box = "ubuntu/bionic64"

  config.vm.provider "virtualbox" do |vb|
    vb.memory = "2048" 
    vb.cpus = 2 
  end

  config.vm.define "docker_host" do |node|
    node.vm.hostname = "dockerhost" 
    node.vm.network "public_network", bridge: "Intel(R) Ethernet Controller (3) I225-V"

    node.vm.provision "shell", inline: <<-SHELL
      sudo apt-get update

      sudo apt-get install -y docker.io docker-compose python3 python3-pip pip install ansible

      sudo usermod -aG docker $USER
    SHELL
  end
end

